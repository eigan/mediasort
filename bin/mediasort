#!/usr/bin/env php
<?php

if (version_compare(PHP_VERSION, '7.0', '<')) {
    echo "Mediasort requires PHP 7\n";
    exit(1);
}

/**
 * Override the timezone. Most exif data is stored without timezones, so UTC
 * is assumed. When a user have a different timezone set, will these times
 * be converted into that timezone.
 */
date_default_timezone_set('UTC');

// installed via composer?
$autoload = __DIR__.'/../../../autoload.php';

if (file_exists($autoload)) {
    require_once $autoload;
} else {
    require_once __DIR__.'/../vendor/autoload.php';
}

$app = new \Eigan\Mediasort\Application(getcwd());

$app->run();
