{
  "name": "eigan/mediasort",
  "description": "A batch rename tool for media files",

  "bin": [
    "bin/mediasort"
  ],

  "config": {
    "platform": {
      "php": "7.0.33"
    }
  },

  "suggest": {
    "ext-exif": "Read camera meta information"
  },

  "require": {
    "symfony/console": "^3.3",
    "php": ">=7.0",
    "monolog/monolog": "^1.23",
    "james-heinrich/getid3": "^1.9"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.7",
    "phpunit/phpunit": "^6.3",
    "mikey179/vfsstream": "^1.6",
    "phpstan/phpstan": "^0.9"
  },

  "autoload": {
      "psr-4": {
          "Eigan\\Mediasort\\": "src/",
          "Eigan\\Mediasort\\Tests\\": "tests"
      }
  }
}
