{
  "name": "eigan/mediasort",
  "description": "A batch rename tool for media files",
  "require": {
    "symfony/console": "^3.3",
    "php": ">=7.0"
  },

  "config": {
    "platform": {
      "php": "7.0.24"
    }
  },

  "suggest": {
    "ext-exif": "Read camera meta information"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "dev-master",
    "phpunit/phpunit": "^6.3",
    "mikey179/vfsStream": "^1.6",
    "kherge/box": "^2.7",
    "phpstan/phpstan": "^0.8.5"
  },

  "autoload": {
      "psr-4": {
          "Eigan\\Mediasort\\": "src/",
          "Eigan\\Mediasort\\Tests\\": "tests"
      }
  }
}
